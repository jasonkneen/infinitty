---
import Layout from './Layout.astro'
import Navigation from '../components/Navigation.astro'
import Footer from '../components/Footer.astro'

interface Props {
  title: string
  description?: string
}

const { title, description } = Astro.props
---

<Layout title={`${title} - Infinitty Terminal`} description={description}>
  <Navigation />
  <main class="min-h-screen pt-32">
    <div class="max-w-4xl mx-auto px-6 py-12">
      <h1 class="text-4xl font-bold mb-4 gradient-text">{title}</h1>
      {description && <p class="text-lg text-slate-400 mb-12">{description}</p>}

      <article class="prose prose-invert max-w-none">
        <slot />
      </article>
    </div>
  </main>
  <Footer />
</Layout>

<style is:global>
  .prose {
    @apply text-slate-300;
  }

  .prose h2 {
    @apply text-2xl font-bold text-slate-100 mt-8 mb-4;
  }

  .prose h3 {
    @apply text-xl font-semibold text-slate-100 mt-6 mb-3;
  }

  .prose p {
    @apply mb-4 leading-relaxed;
  }

  .prose code {
    @apply bg-slate-900 px-2 py-1 rounded text-cyan-400 font-mono text-sm;
  }

  .prose pre {
    @apply bg-slate-900 border border-slate-800 rounded-lg p-4 overflow-x-auto mb-6;
  }

  .prose pre code {
    @apply bg-none px-0 py-0 text-slate-300;
  }

  .prose ul {
    @apply list-disc list-inside space-y-2 mb-4;
  }

  .prose ol {
    @apply list-decimal list-inside space-y-2 mb-4;
  }

  .prose li {
    @apply text-slate-300;
  }

  .prose a {
    @apply text-cyan-400 hover:text-cyan-300 transition-colors;
  }

  .prose blockquote {
    @apply border-l-4 border-cyan-500 pl-4 py-2 my-4 italic text-slate-400 bg-slate-900/30 rounded;
  }

  .prose table {
    @apply w-full border-collapse border border-slate-700 mb-4;
  }

  .prose th {
    @apply bg-slate-800 text-slate-100 font-semibold border border-slate-700 px-4 py-2 text-left;
  }

  .prose td {
    @apply border border-slate-700 px-4 py-2;
  }
</style>
